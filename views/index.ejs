<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css" />

		<script src="/javascripts/js/bootstrap.min.js"></script>
		<!-- Bootstrap core CSS -->

		<style>
			.bd-placeholder-img {
				font-size: 1.125rem;
				text-anchor: middle;
				-webkit-user-select: none;
				-moz-user-select: none;
				user-select: none;
			}

			@media (min-width: 768px) {
				.bd-placeholder-img-lg {
					font-size: 3.5rem;
				}
			}
		</style>

		<!-- Custom styles for this template -->
		<link href="/stylesheets/pricing.css" rel="stylesheet" />
	</head>
	<body>
		<header
			class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm"
		>
			<p class="h5 my-0 me-md-auto fw-normal"><%= title %></p>
			<nav class="my-2 my-md-0 me-md-3">
				<a href="/new" class="btn btn-primary">Create Message</a>
			</nav>
		</header>

		<main class="container">
			<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
				<h1 class="display-4"><%= title %></h1>
				<p class="lead">Welcome to <%= title %></p>
      </div>

     
      <% messages.map((message)=>{ %>
			<div class="card-columns">
				<div class="card p-3">
					<blockquote class="blockquote mb-0 card-body">
           
						<p>
              <%= message.text %>
						</p>
						<footer class="blockquote-footer">
							<small class="text-muted">
								<%= message.user %> on <cite title="Source Title"><%= message.added %></cite>
							</small>
						</footer>
					</blockquote>
				</div>
				</div>
      </div>
      <% }) %>
      
		</main>
	</body>
</html>
